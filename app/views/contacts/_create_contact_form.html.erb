<%= form_for([user,contact]) do |f| %>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :first_name, class: "mdl-textfield__input", id: :contact_first_name %>
    <%= f.label :first_name, class: "mdl-textfield__label", for: :contact_first_name  %>
  </div>
  <br>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :last_name, class: "mdl-textfield__input", id: :contact_last_name %>
    <%= f.label :last_name, class: "mdl-textfield__label", for: :contact_last_name %>
  </div>
  <br>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.email_field :email, class: "mdl-textfield__input", id: :contact_email %>
    <%= f.label :email, class: "mdl-textfield__label", for: :contact_email %>
  </div>
  <br>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :nickname, class: "mdl-textfield__input", id: :contact_nickname %>
    <%= f.label :nickname, class: "mdl-textfield__label", for: :contact_nickname %>
  </div>
 	<br>
 	<div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :relationship, class: "mdl-textfield__input", id: :contact_relationship %>
    <%= f.label :relationship, class: "mdl-textfield__label", for: :contact_relationship %>
  </div>
	<%= f.fields_for :phones do |phones_f| %>
		<br>
 		<div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
			<%= phones_f.text_field :phone_type, class: "mdl-textfield__input", id: :contact_phone_type %>
			<%= phones_f.label :phone_type, class: "mdl-textfield__label", for: :contact_phone_type %>
		</div>
		<br>
		<div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
			<%= phones_f.text_field :phone_number, class: "mdl-textfield__input", id: :contact_phone_type %>
			<%= phones_f.label :phone_number, class: "mdl-textfield__label", for: :contact_phone_type %>
		</div>
	<% end %>  

  <div class="actions">
    <%= f.submit "Add Contact", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
  </div>

<% end %>