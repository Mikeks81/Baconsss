<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input", id: :user_reg_email %>
    <%= f.label :email, class: "mdl-textfield__label", for: :user_reg_email %>
  </div>
  <br>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input", id: :user_reg_password %>
    <%= f.label :password, class: "mdl-textfield__label", for: :user_reg_password  %>
  </div>
 <br>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input", id: :user_reg_password_confirm %>
    <%= f.label :password_reg_confirmation, class: "mdl-textfield__label", for: :user_password_confirm %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
  </div>
<% end %>

