<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.email_field :email, autofocus: true,  class: "mdl-textfield__input", id: :user_email %>
        <%= f.label :email, class: "mdl-textfield__label", for: :user_reg_email %>
  </div>
<br>
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input", id: :user_password %>
    <%= f.label :password, class: "mdl-textfield__label", for: :user_password %>
  </div>
<br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="user_remember">
        <%= f.check_box :remember_me, class: "mdl-checkbox__input", id: :user_remember %>
        <span class="mdl-checkbox__label">Remember Me?</span>
      </label>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
